                        <p><%= component_text.c_footer_announcement_text %></p>
                        <ul class="list-group list-group-light">
                            <!-- First Name -->
                            <div class="mb-3 form-focus" id="footer-first-name-container">
                                <input type="text" class="form-control floating" id="footer_first_name" name="footer_first_name">
                                <label class="focus-label" for="footer_first_name"><%= component_text.placeholder_first_name %></label>
                            </div>
                            <!-- Last Name -->
                            <div class="mb-3 form-focus" id="footer-first-name-container">
                                <input type="text" class="form-control floating" id="footer_last_name" name="footer_last_name">
                                <label class="focus-label" for="footer_last_name"><%= component_text.placeholder_last_name %></label>
                            </div>
                            <!-- Date Of Birth -->
                            <div class="mb-3 form-focus" id="footer-dob-container">
                                <input type="text" class="form-control floating datetimepicker" id="footer_dob" name="footer_dob">
                                <label class="focus-label" for="footer_dob"><%= component_text.placeholder_dob %></label>
                            </div>
                            <!-- Email -->
                            <div class="mb-3 form-focus" id="footer-email-container">
                                <input type="text" class="form-control floating" id="footer_email" name="footer_email">
                                <label class="focus-label" for="footer_email"><%= component_text.placeholder_email %></label>
                            </div>
                            <!-- Phone -->
                            <div class="mb-3 form-focus" id="footer-phone-container">
                                <input type="text" class="form-control floating" id="footer_phone" name="footer_phone">
                                <label class="focus-label" for="footer_phone"><%= component_text.placeholder_phone %></label>
                            </div>
                            <!-- Captcha Image -->
                            <div class="mb-3 d-flex justify-content-between align-items-center">
