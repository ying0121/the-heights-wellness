                            <!-- Captcha -->
                            <div class="mb-3 form-focus" id="footer-captcha-container">
                                <input type="password" class="form-control floating" id="footer_captcha" name="footer_captcha">
                                <label class="focus-label" for="footer_captcha"><%= component_text.placeholder_captcha %></label>
                            </div>
                            <!-- Submit Button -->
                            <div class="view-all-more">
                                <button id="footer_singup_btn" name="action" value="submit" type="button" class="btn btn-primary m-0 w-100"><%= component_text.btn_send %></button>
                            </div>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0 text-md-start">
                    <div class="footer-widget footer-menu">
