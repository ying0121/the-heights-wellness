                                    <div class="fav-item">
                                        <div class="featured-rating"><i class="fa fa-star "></i> <span>5</span></div>
                                        <a href="javascript:void(0)" class="fav-icon">
                                            <i class="fa fa-heart"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="listing-content">
                                    <div class="listing-details">
                                        <div class="listing-profile-details">
                                            <div class="listing-floating-img">
                                                <img src="assets/images/bg/ecg-wave.png" alt="ecg-wave">
                                            </div>
                                            <div class="listing-user">
                                                <div class="listing-user-details">
                                                    <h6><a href="javascript:;"><%= patient_reviews[i].name %> </a></h6>
                                                    <span class="mb-2"><%- patient_reviews[i].desc %></span>
                                                </div>
                                            </div>
                                            <div class="listing-btn"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>
<!-- /Patient Review Section -->