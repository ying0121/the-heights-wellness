<!-- Hero Parallax Video -->
<% let index = Math.floor(Math.random() * 3) + 1 %>
<div class="video-parallax-container">
    <video class="parallax-video" autoplay muted loop playsinline>
        <source src="./assets/videos/service<%= index %>.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <!-- Service Title -->
     <div class="container video-content aos" data-aos="fade-right">
        <h1 class="text-white-50"><%= component_text.menu_services %></h1>
        <p class="text-white"><%= component_text.t_service_desc %></p>
    </div>=
    <!-- /Service Title -->
</div>
<!-- /Hero Parallax Video -->
<!-- Services Section -->
<div class="features-section-sixteen">
    <div class="container">
        <div class="owl-carousel features-slider-sixteen owl-theme">
            <% for (let i = 0; i < services.length; i++) { %>
                <div class="feature-sixteen-main" style="height: 480px;">
                    <div class="feature-six-img" style="height: 480px;">
                        <img src="./assets/service/image/<%= services[i].image %>" alt="<%= services[i].title %>" class="img-fluid">
                        <div class="mask-premium">
                            <div class="d-flex justify-content-start align-items-center px-3">
                                <% if (services[i].online_payment == 1) { %>
                                    <i class="fa-solid fa-crown text-warning fs-4"></i>
                                <% } %>
                            </div>
                        </div>
                        <div class="mask-price">
                            <div class="d-flex justify-content-end align-items-center px-3">
                                <% if (services[i].online_payment == 1) { %>
                                    <span class="badge badge-danger fs-6">$ <%= services[i].cost %></span>
                                <% } else { %>
                                    <span class="badge badge-success fs-6">FREE</span>
                                <% } %>
                            </div>
                        </div>
                        <div class="feature-content-six">
                            <div class="feature-content-one">
                                <h5><%= services[i].title %></h5>
                                <span><i class="fa-solid fa-angle-up"></i></span>
                            </div>
                            <div class="feature-content-two">
                                <p><%- services[i].short_desc %></p>
                                <span><i class="fa-solid fa-angle-down"></i></span>
                            </div>
                            <div class="d-flex justify-content-around align-items-center feature-content-three">
                                <button data-bs-toggle="modal" data-bs-target="#payment-modal" class="btn btn-sm bg-info-light d-none" id="show-service-payment-modal-btn"></button>
                                <button data-bs-toggle="modal" data-bs-target="#service_request_modal" class="btn btn-sm bg-info-light d-none" id="show-service-modal-btn"></button>
                                <a href="javascript:;" class="text-primary service_request fs-5" data-id="<%= services[i].id %>" data-title="<%= services[i].title %>"><%= component_text.t_request %></a>
                                <a href="./services/detail?s=<%= services[i].id %>" class="fs-5 text-info" target="_blank"><%= component_text.btn_read_more %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
<!-- /Services Section -->