<div class="parallax-container vh-100">
    <video class="parallax-video" autoplay muted loop playsinline>
        <source src="./assets/videos/lock.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="d-flex align-items-center vh-100 video-blur">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-8 rounded p-4 aos" data-aos="fade-up" style="background-color: #10101060; border: 1px solid #FAFAFA80;">
                    <!-- Title -->
                    <div class="w-100 d-flex justify-content-center align-items-center mb-2">
                        <div id="signin-lottie" style="width: 150px; height: 150px;"></div>
                    </div>
                    <!-- Desc -->
                    <div class="text-white fw-bold mb-2 mx-3 fs-5"><%= component_text.t_pa_si_welcome %></div>
                    <!-- Alert Begin -->
                    <div class="alert alert-danger d-none" data-bs-alert-init id="alert-message"></div>
                    <!-- Form Begin -->
                    <div>
                        <!-- Email input -->
                        <div class="form-focus mb-4" id="name-container">
                            <input type="text" name="text" id="name" class="form-control floating bg-transparent text-white" />
                            <label class="focus-label text-white" for="name"><%= component_text.placeholder_login_name %></label>
                        </div>
                        <!-- Password input -->
                        <div class="pass-group form-focus mb-4" id="password-container">
                            <input type="password" name="password" id="password" class="form-control floating pass-input bg-transparent text-white" />
                            <label class="focus-label text-white" for="password"><%= component_text.placeholder_password %></label>
                            <span class="feather-eye toggle-password text-white"></span>
                        </div>
                        <!-- Submit button -->
                        <button id="submit" name="action" value="signin" class="btn btn-rounded btn-outline-info w-100 py-2"><%= component_text.btn_login %></button>
                    </div>
                    <!-- Help Buttons -->
                    <div class="row pt-3">
                        <div class="col-md-12 d-flex justify-content-start">
                            <a href="./help" class="btn btn-link text-primary" role="button"><%= component_text.t_pa_ah_help %></a>
                            <a href="./signup" class="btn btn-link text-primary" role="button"><span><%= component_text.btn_signup %></span></a>
                        </div>
                    </div>
                    <!-- Form End -->
                    <hr class="my-1" />
                    <p class="text-white m-0 mt-3"><%= component_text.t_pa_pr_footer %></p>
                </div>
            </div>
        </div>
    </div>
</div>